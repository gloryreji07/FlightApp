/**
 * @file Firestore Security Rules for FlightTrackr application.
 * @core_philosophy This ruleset enforces a strict user-ownership model.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to watchlist documents.
     * Each user has their own watchlist document, identified by their UID.
     * @path /watchlists/{userId}
     * @principle Enforces that only the authenticated owner can access their watchlist.
     */
    match /watchlists/{userId} {
      // Helper function to check if the user is the owner of the document
      function isOwner() {
        return request.auth != null && request.auth.uid == userId;
      }
      
      // Allow read, create, update, and delete only if the user is the owner.
      allow read, write: if isOwner();
    }
  }
}
